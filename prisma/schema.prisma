generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  passwordHash  String
  name          String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  refreshTokens RefreshToken[]
  clothingItems ClothingItem[]
  outfits       Outfit[]
}

model RefreshToken {
  id         String   @id @default(uuid())
  tokenHash  String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
}

enum ClothingType {
  TOP
  BOTTOM
  DRESS
  OUTERWEAR
  SHOES
  ACCESSORY
  OTHER
}

enum Season {
  WINTER
  SPRING
  SUMMER
  AUTUMN
  ALL
}

model ClothingItem {
  id        String       @id @default(uuid())
  user      User         @relation(fields: [userId], references: [id])
  userId    String

  name      String
  imageUrl  String?
  type      ClothingType?
  color     String?
  season    Season?
  tags      String[]

  outfits   OutfitItem[]

  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model Outfit {
  id        String        @id @default(uuid())
  user      User          @relation(fields: [userId], references: [id])
  userId    String

  name      String
  items     OutfitItem[]

  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model OutfitItem {
  id             String        @id @default(uuid())
  outfit         Outfit        @relation(fields: [outfitId], references: [id])
  outfitId       String

  clothingItem   ClothingItem  @relation(fields: [clothingItemId], references: [id])
  clothingItemId String
}
